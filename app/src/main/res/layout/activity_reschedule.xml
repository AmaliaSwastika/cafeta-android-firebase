<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAFA"
    tools:context=".Reschedule">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="575dp"
        android:gravity="center"
        android:text="RESCHEDULE"
        android:textColor="@color/brownDark"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="595dp"
        android:src="@drawable/gelombang3"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-27dp"
        android:layout_marginBottom="648dp"
        android:src="@drawable/gelombang4"/>


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="418dp"
        android:background="@drawable/edt_background"
        android:hint="Input Full Name"
        android:paddingLeft="20dp"
        android:textColor="@color/brownDark" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="526dp"
        android:background="@drawable/edt_background"
        android:hint="Search Email"
        android:paddingLeft="20dp"
        android:textColor="@color/brownDark" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="356dp"
        android:background="@drawable/edt_background"
        android:hint="Input Number Phone"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColor="@color/brownDark" />

    <Spinner
        android:id="@+id/spinnerOutlet"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="319dp" />

    <Spinner
        android:id="@+id/spinnerPerson"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="274dp" />


    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="211dp"
        android:background="@drawable/edt_background"
        android:focusable="false"
        android:hint="Input Date"
        android:inputType="date"
        android:paddingLeft="20dp"
        android:textColor="@color/brownDark" />

    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="171dp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="472dp"
        android:backgroundTint="@color/brownDark"
        android:text="SEARCH"
        android:textColor="@color/cream" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/brownDark"
        android:enabled="false"
        android:text="RESCHEDULE"
        android:textColor="@color/cream" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/brownDark"
        android:enabled="false"
        android:text="DELETE"
        android:textColor="@color/cream" />

</RelativeLayout>