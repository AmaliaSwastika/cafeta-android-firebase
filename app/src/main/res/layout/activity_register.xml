<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAFA"
    tools:context=".Login">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="595dp"
        android:src="@drawable/gelombang3"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="-27dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="648dp"
        android:src="@drawable/gelombang4"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="110dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="158dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="143dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="540dp"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/brownDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="515dp"
        android:gravity="center"
        android:text="Welcome at Cafeta!"
        android:textColor="@color/brownDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtText1"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="355dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Input Email"
        android:paddingLeft="20dp"
        android:textColor="@color/grey" />

    <EditText
        android:id="@+id/edtText2"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="391dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/ic_baseline_personn_24"
        android:drawablePadding="10dp"
        android:hint="Input Username"
        android:paddingLeft="20dp"
        android:textColor="@color/grey" />

    <EditText
        android:id="@+id/edtText3"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="323dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="Input Password"
        android:paddingLeft="20dp"
        android:textColor="@color/grey" />

    <View
        android:id="@+id/line1"
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="303dp"
        android:background="@color/brownDark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="277dp"
        android:gravity="center"
        android:text="OR"
        android:textColor="@color/brownDark"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line2"
        android:layout_width="135dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="305dp"
        android:background="@color/brownDark" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="230dp"
        android:backgroundTint="@color/cream"
        android:drawableLeft="@drawable/googlee"
        android:text="Login With Google"
        android:textColor="@color/brownDark"
        android:onClick="to_mainActivity" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="174dp"
        android:backgroundTint="@color/brownDark"
        android:onClick="to_mainActivity"
        android:text="Login"
        android:textColor="@color/cream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginTop="614dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-43dp"
        android:src="@drawable/gelombang1" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="638dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/gelombang2" />
</RelativeLayout>